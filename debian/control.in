Source: libruis-render-opengles
Section: libs
Priority: extra
Maintainer: Ivan Gagis <igagis@gmail.com>
Build-Depends:
	debhelper (>= 9),
	prorab,
	prorab-extra,
	pkg-config,
	clang-format,
	clang-tidy,
	libmorda-dev (>= 0.5.160),
	libgles2-mesa-dev
Build-Depends-Indep: doxygen
Standards-Version: 3.9.2

Package: libruis-render-opengles$(soname)
Section: libs
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: OpenGL ES renderer for morda.
 OpenGL ES renderer for morda GUI library.

Package: libruis-render-opengles$(soname)-dbg
Section: debug
Architecture: any
Depends: libruis-render-opengles$(soname) (= ${binary:Version}), ${misc:Depends}
Description: debugging symbols for libruis-render-opengles$(soname) package.

Package: libruis-render-opengles-dev
Section: libdevel
Architecture: any
Depends:
		libruis-render-opengles$(soname) (= ${binary:Version}),
		libruis-render-opengles$(soname)-dbg (= ${binary:Version}),
		libmorda-dev (>= 0.5.160),
		${misc:Depends}
Suggests: libruis-render-opengles-doc
Description: OpenGL ES renderer for morda.
 OpenGL ES renderer for morda GUI library.

Package: libruis-render-opengles-doc
Section: doc
Architecture: all
Depends: ${misc:Depends}
Description: documentation for libruis-render-opengles library.
 For more details see description to libruis-render-opengles-dev package.
